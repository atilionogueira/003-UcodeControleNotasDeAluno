@page "/registrar"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>Ucode - Entrar</PageTitle>
<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-with-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img src="imgs/Ucode.png"
                     alt="Ucode - Controle de Notas de Alunos"
                     width="200" />
            </div>
            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />

                <MudTextField T="string"
                              Label="Nome"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Text"
                              For="@(() => InputModel.FullName)"
                              @bind-Value="InputModel.FullName" />

                <MudTextField T="string"
                              Label="Login"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Email"
                              For="@(() => InputModel.UserName)"
                              @bind-Value="InputModel.UserName" />

                <MudTextField T="string"
                              Label="E-mail"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Email"
                              For="@(() => InputModel.Email)"
                              @bind-Value="InputModel.Email" />

                <MudTextField T="string"
                              Label="Telefone"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Telephone"
                              For="@(() => InputModel.PhoneNumber)"
                              @bind-Value="InputModel.PhoneNumber" />

                <MudTextField T="string"
                              Label="Senha"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Password"
                              For="@(() => InputModel.Password)"
                              @bind-Value="InputModel.Password" />

                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Registrar</MudButton>
                        <MudSpacer />
                        <MudButton Href="/login">Já tenho uma conta</MudButton>
                    }
                </div>

            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>

